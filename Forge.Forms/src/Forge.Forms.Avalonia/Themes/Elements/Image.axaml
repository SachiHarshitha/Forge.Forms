<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:defaults="clr-namespace:Forge.Forms.AvaloniaUI.FormBuilding.Defaults"
    xmlns:formBuilding="clr-namespace:Forge.Forms.AvaloniaUI.FormBuilding">
    <formBuilding:FormBindingConverter x:Key="FormBindingConverter"/>

    <ControlTemplate x:Key="ImagePresenterTemplate" TargetType="{x:Type defaults:ImagePresenter}">
        <Image
            Width="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=Width}"
            Height="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=Height}"
            HorizontalAlignment="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=HorizontalAlignment}"
            VerticalAlignment="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=VerticalAlignment}"
            Source="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=Source}"
            Stretch="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=Stretch}"
            StretchDirection="{Binding DataContext ,Converter={StaticResource FormBindingConverter},ConverterParameter=StretchDirection}" />
    </ControlTemplate>


    
</ResourceDictionary>